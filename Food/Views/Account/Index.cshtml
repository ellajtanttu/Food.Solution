@{
    Layout = "_Layout";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
else
{
    <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
        <button type="button" class="btn btn-dark">@Html.ActionLink("Register", "Register")</button>
        </li>
        <li class="nav-item">
        <button type="button" class="btn btn-dark">@Html.ActionLink("Log in", "Login")</button>
        </li>
    </ul>
    @* <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p> *@
}